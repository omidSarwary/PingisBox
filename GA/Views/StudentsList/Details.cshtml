@model GA.Models.Students

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="header">
    <h4 class="title">Details</h4>
    <p class="category">User</p>
</div>
<div class="content table-responsive table-full-width">
    <div class="content">


        <div>

            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.email)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.email)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.FullName)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.code)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.code)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.RFID)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.RFID)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsBorrowed)
                </dt>
                <dd>
                    @if (Model.IsBorrowed)
                    {
                        <span>Yes</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.BorrowedItem)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.BorrowedItem)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.BorrowedItem1)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.BorrowedItem1)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.BorrowedTime)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.BorrowedTime)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.HandedBack)
                </dt>
                <dd>
                    @if (Model.HandedBack)
                    {
                        <span>Yes</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.IsOverTime)
                </dt>
                <dd>
                    @if (Model.IsOverTime)
                    {
                        <span>Yes</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </dd>
            </dl>
        </div>
        <div>
            <div class="btn-group" role="group" aria-label="Basic">
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                <a class="btn btn-info" asp-action="Index">Back to List</a>
            </div>
        </div>

    </div>
</div>


